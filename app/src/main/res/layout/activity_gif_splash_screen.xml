<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gif_splash_screen_root_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.GifSplashScreenActivity"
    android:background="@color/gifWhiteColor">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gif_splash_screen_main_lottie_animation_view"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:lottie_rawRes="@raw/surprise"
        app:lottie_loop="false"
        app:lottie_autoPlay="false"/>

</RelativeLayout>